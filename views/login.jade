extends base

block vars
  - var title = 'Login'

block body
  h1 Log Into Your Account
  <a href="/">Back</a>

  if error
    p ERROR: #{error}

  form(method="post")
    span Username:
    input(type="text", name="username", required=true)
    br

    span Password:
    input(type="password", name="password", required=true)
    br

    input(type="submit")
