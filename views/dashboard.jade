extends base

block vars
  - var title = 'Dashboard'

block body
 #dashboardContainer
  h2 Dashboard
  p Welcome, #{user.username}! You are now logged in.
  h2 Account
  img#dashboardAvatar(src= "#{user.avatar}" width="125" height="125")
  p Usern: #{user.username}
  p Chips: #{user.chips}
  button#changeAvatar(data-action="bea") Change Avatar
  form(action='/upload', method='POST', enctype='multipart/form-data')
   input#changeAvatarUpload(type="file", name="avatar", accept="image/*", onchange="this.form.submit();")

 #tables
  h2 Tables
  ul
   li: <a href="/game">You vs. Dealer</a>
   li: <a href="/game">Table 1</a>
   li: <a href="/game">Table 2</a>
   li: <a href="/game">Table 3</a>